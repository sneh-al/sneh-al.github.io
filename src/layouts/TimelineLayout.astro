---
const { title } = Astro.props;
---
<section class='py-24'>
  <div
    class={`${title} lg:max-w-7xl m-auto md:flex time bg-black bg-opacity-75 shadow-inner shadow-slate-950 p-5 rounded-xl`}>
    <header class='md:w-1/2'>
      <h1
    class='dark:text-white bg-black gap-0 m-0  p-10 z-50 text-4xl md:text-7xl lg:text-7xl capitalize relative'

        data-scroll
        data-scroll-sticky
        data-scroll-target={`.${title}`}
        data-scroll-repeat
        data-scroll-speed='1.5'>
        {title}
      </h1>
    </header>
    <main class='md:w-1/2 md:bg-transparent '>
      <ol
        class='relative border-l-4 border-indigo-600 leading-loose items-center justify-center py-10 text-black dark:text-white'>
    <slot/>
      </ol>
    </main>
  </div>
</section>
