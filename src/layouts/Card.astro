---
const { href, title, body, homepage, topics, image } = Astro.props;
import ExternalSvg from "../assets/external.svg";
---

<li class='border-2 border-rose-500 shadow-3xl shadow-white'>
  <div class='bg-[#0E2A47] rounded-lg md:flex gap-5'>
    <img
      src={image ||
        "https://images.unsplash.com/photo-1593642532744-d377ab507dc8"}
      alt='Laptop on Desk'
      class='md:w-1/3 rounded-t-lg md:rounded-l-lg md:rounded-t-none'
    />
    <div class='text-rose-500 p-5'>
      <h2 class='font-bold text-2xl md:text-4xl mb-2'>
        {title}
      </h2>
      {
        topics && (
          <div class='flex flex-wrap gap-2 text-sm '>
            {topics.map((topic) => (
              <button class='px-3 py-2 bg-opacity-10 bg-rose-500 text-white'>
                {topic}
              </button>
            ))}
          </div>
        )
      }

      <p class='py-5'>{body}</p>
      <div class='flex items-center'>
        <a
          href={homepage}
          target='_blank'
          rel='noopener noreferrer'
          class='flex gap-1'>
          <span
            class='px-5 py-3 bg-rose-500 bg-opacity-90 text-blue-100 flex items-ceter justify-between'>
            Visit
            <img src={ExternalSvg} class='w-6 h-6 my-auto ml-auti' />
          </span>
        </a>
        {
          href && (
            <a
              href={href}
              target='_blank'
              rel='noopener noreferrer'
              class='px-5 flex gap-1 py-3 text-rose-500 underline underline-offset-4 decoration-rose-500'>
              Github
              <img src={ExternalSvg} class='w-6 h-6 my-auto ml-auti' />
            </a>
          )
        }
      </div>
    </div>
  </div>
</li>
