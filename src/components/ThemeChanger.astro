<svg
  xmlns='http://www.w3.org/2000/svg'
  id='themeChanger'
  fill='none'
  viewBox='0 0 24 24'
  stroke-width='1.5'
  stroke='currentColor'
  class='w-6 h-6 stroke-black dark:stroke-white'>
</svg>

<script>
  let isTrue = true;
  const toggler = document.querySelector("#toggler");
  const themeToggler = document.querySelector("#themeChanger");

  const nav = document.querySelector("#nav");

  const toggle = () => {
    const hidden = isTrue ? "hidden" : "auto";
    document.body.setAttribute("style", `overflow:${hidden};`);
    nav.classList.toggle("hidden");
    isTrue = !isTrue;
  };

  toggler.addEventListener("click", toggle);
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  if (theme === "light") {
    document.body.classList.remove("dark");
    themeToggler.innerHTML =  ` <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />`
  } else {
    document.body.classList.add("dark");
themeToggler.innerHTML =`<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />`
    
  }

  window.localStorage.setItem("theme", theme);

  const handleToggleClick = () => {
    const element = document.body;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");

    if(isDark) {
themeToggler.innerHTML =`<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />`

    }else{
    themeToggler.innerHTML =  ` <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />`

    }
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };
  themeToggler.addEventListener("click", handleToggleClick);
</script>