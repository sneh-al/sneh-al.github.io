---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const activeStyle = "underline underline-offset-8 decoration-rose-500 ";
---

<header class='grid grid-cols-2 top-0 z-50 w-full  p-3 bg-transparent ' 
  data-scroll data-scroll-sticky data-scroll-target="body">
  <div class='flex items-center p-5 pb-0'>
    <a
      href='/'
      class='text-xl md:text-2xl lg:text-3xl bg-gradient-to-tr from-purple-400 to-rose-400 bg-clip-text text-transparent font-extrabold'
      >Snehal</a
    >
  </div>

  <nav class='flex w-full items-center flex-col md:flex-row'>
   
 

  
<div class='ml-auto flex items-center justify-evenly gap-2 p-5 pb-0'>
  
   <svg xmlns="http://www.w3.org/2000/svg" id='themeChanger' fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-black dark:stroke-white">
</svg>
 <button  id='toggler'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        id='bars'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='1.5'
        stroke='currentColor'
        class='w-12 h-12 dark:stroke-white'>
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25'></path>
      </svg>
      <!-- <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" id="close" class="w-5 h-5 hidden group-active:block">
  <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
</svg> -->
    </button>

    <ol
      class='list-decimal text-red-500 list-inside flex hidden  w-full   justify-center items-center gap-6 '
      id='nav'>
      <li class='p-5 md:p-0'>
        <a href='/' class={currentPath === "" ? activeStyle : ""}>Home</a>
      </li>
      <li class='p-5 md:p-0'>
        <a href='/me' class={currentPath === "me" ? activeStyle : ""}
          >Get to Know Me</a
        >
      </li>
      <li class='p-5 md:p-0'>
        <a href='/stuff' class={currentPath === "stuff" ? activeStyle : ""}
          >Check out my Stuff</a
        >
      </li>
    </ol>
</div>
   
  </nav>
</header>
<style>
  /* @import url("https://fonts.googleapis.com/css2?family=Cedarville+Cursive&display=swap"); */

  /* .logo {
    font-family: "Cedarville Cursive", cursive;
  } */


  header{
    z-index: 100;
  }

  /* Toggle B */
  #toggleB:checked ~ .dot {
    transform: translateX(100%);
    background-color: #48bb78;
  }
</style>

<script>
  let isTrue = true;
  const toggler = document.querySelector("#toggler");
  const themeToggler = document.querySelector("#themeChanger");

  const nav = document.querySelector("#nav");

  const toggle = () => {
    const hidden = isTrue ? "hidden" : "auto";
    document.body.setAttribute("style", `overflow:${hidden};`);
    nav.classList.toggle("hidden");
    isTrue = !isTrue;
  };

  toggler.addEventListener("click", toggle);
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  if (theme === "light") {
    document.body.classList.remove("dark");
    themeToggler.innerHTML =  ` <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />`
  } else {
    document.body.classList.add("dark");
themeToggler.innerHTML =`<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />`
    
  }

  window.localStorage.setItem("theme", theme);

  const handleToggleClick = () => {
    const element = document.body;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");

    if(isDark) {
themeToggler.innerHTML =`<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />`

    }else{
    themeToggler.innerHTML =  ` <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />`

    }
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };
  themeToggler.addEventListener("click", handleToggleClick);
</script>
